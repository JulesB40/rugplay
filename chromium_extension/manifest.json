{
  "manifest_version": 3,
  "name": "Rugplay Tracker",
  "description": "Track marked users and coins on Rugplay.",
  "version": "0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://rugplay.com/*", "http://localhost/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://rugplay.com/*",
    "http://localhost/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["tracker.html", "tracker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
