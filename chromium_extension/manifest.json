{
  "manifest_version": 3,
  "name": "Rugplay Tracker",
  "description": "Track marked users and coins on Rugplay.",

  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage"],
  "host_permissions": [
    "https://rugplay.com/*",
    "http://localhost/*"
  ]
}
