{
  "manifest_version": 3,
  "name": "RugPlay Tracker",
  "version": "0.1.0",
  "description": "Tracks user transactions and coin activity on RugPlay.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://rugplay.com/*"
  ],
  "action": {
    "default_title": "RugPlay Tracker",
    "default_popup": "tracking.html"
  },
  "content_scripts": [
    {
      "matches": ["https://rugplay.com/*"],
      "js": ["content_script.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tracking.html", "tracking.js", "styles.css"],
      "matches": ["https://rugplay.com/*"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
